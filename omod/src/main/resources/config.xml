<!DOCTYPE module PUBLIC "-//OpenMRS//DTD OpenMRS Config 1.0//EN"
        "https://resources.openmrs.org/doctype/config-1.6.dtd">
<module configVersion="1.6">

    <!-- Module Properties -->
    <id>${project.parent.artifactId}</id>
    <name>${project.parent.name}</name>
    <version>${project.parent.version}</version>
    <package>${project.parent.groupId}.${project.parent.artifactId}</package>
    <author>Sharon</author>
    <description>
        ${project.parent.description}
    </description>
    <updateURL>https://modules.openmrs.org/modules/download/${project.parent.artifactId}/update.rdf
    </updateURL>
    <require_version>${openMRSVersion}</require_version>
    <!-- / Module Properties -->


    <!-- Module Activator -->
    <activator>${project.parent.groupId}.${project.parent.artifactId}.CohortModuleActivator
    </activator>
    <require_modules>
        <require_module version="${webservicesRestVersion}">
            org.openmrs.module.webservices.rest
        </require_module>
    </require_modules>

    <aware_of_modules>
        <aware_of_module>org.openmrs.module.legacyui</aware_of_module>
        <aware_of_module version="${htmlFormEntryVersion}">
            org.openmrs.module.htmlformentry
        </aware_of_module>
    </aware_of_modules>

    <conditionalResources>
        <conditionalResource>
            <path>/lib/${project.parent.artifactId}-api-htmlformentry-${project.parent.version}.jar</path>
            <loadIfModulesPresent>
                <openmrsModule>
                    <moduleId>org.openmrs.module.htmlformentry</moduleId>
                    <version>${htmlFormEntryVersion}</version>
                </openmrsModule>
            </loadIfModulesPresent>
        </conditionalResource>
    </conditionalResources>

    <!-- Adds link to admin page -->
    <extension>
        <point>org.openmrs.admin.list</point>
        <class>${project.parent.groupId}.${project.parent.artifactId}.extension.html.AdminList
        </class>
    </extension>

    <!-- Maps hibernate file's, if present -->
    <mappingFiles>
        CohortMemberAttribute.hbm.xml
        CohortMemberAttributeType.hbm.xml
    </mappingFiles>

    <!-- Internationalization -->
    <!-- All message codes should start with ${project.parent.artifactId}. -->
    <messages>
        <lang>en</lang>
        <file>messages.properties</file>
    </messages>
    <messages>
        <lang>fr</lang>
        <file>messages_fr.properties</file>
    </messages>
    <messages>
        <lang>es</lang>
        <file>messages_es.properties</file>
    </messages>
    <!-- /Internationalization -->
</module>

